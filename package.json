{
  "name": "contentlayer-monorepo",
  "private": true,
  "workspaces": [
    "./packages/@contentlayer/*",
    "./packages/*",
    "./packages/playgrounds/*",
    "./packages/playgrounds/playground-azimuth-sanity/*"
  ],
  "scripts": {
    "test": "jest",
    "build": "yarn workspaces foreach --verbose --topological-dev --no-private run build",
    "release:patch": "yarn workspaces foreach --verbose --topological-dev --no-private version patch && yarn workspaces foreach --verbose --topological-dev --parallel --no-private npm publish --tolerate-republish",
    "lint:check": "run lint:eslint:check && run lint:prettier:check",
    "lint:fix": "run lint:eslint:fix & run lint:prettier:fix",
    "lint:eslint:fix": "eslint packages --ext .ts --fix",
    "lint:eslint:check": "eslint packages --ignore-path packages/playgrounds --ext .ts --max-warnings=0",
    "lint:prettier:fix": "prettier packages --ignore-path packages/playgrounds \"!packages/playgrounds/**\" --write",
    "lint:prettier:check": "prettier packages \"!packages/playgrounds/**\" --check",
    "g:build": "cd $INIT_CWD && (run g:build:types & run g:build:lib)",
    "g:build:types": "cd $INIT_CWD && tsc --build",
    "g:build:types:force": "cd $INIT_CWD && rm -rf ./dist/types && tsc --build",
    "g:build:lib": "cd $INIT_CWD && (run g:build:lib:esm & run g:build:lib:cjs)",
    "g:build:lib:esm": "cd $INIT_CWD && rm -rf ./dist/esm && esbuild ./src/**/*.ts --outdir=./dist/esm --format=esm --sourcemap",
    "g:build:lib:cjs": "cd $INIT_CWD && rm -rf ./dist/cjs && esbuild ./src/**/*.ts --outdir=./dist/cjs --format=cjs --target=es6 --sourcemap"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/prettier": "^2",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "esbuild": "^0.12.14",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.0.4",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  },
  "resolutions": {
    "esbuild": "0.12.8",
    "contentlayer": "workspace:*",
    "@contentlayer/*": "workspace:*",
    "contentlayer-stackbit-yaml-generator": "workspace:*",
    "next-contentlayer": "workspace:*",
    "rxjs": "^7.1.0"
  },
  "packageManager": "yarn@3.0.2"
}
