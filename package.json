{
  "private": true,
  "workspaces": [
    "./packages/@contentlayer/*",
    "./packages/*",
    "./packages/playgrounds/*",
    "./packages/playgrounds/playground-azimuth-sanity/*"
  ],
  "scripts": {
    "test": "jest",
    "build": "yarn workspaces foreach --verbose --topological-dev --no-private run build",
    "release:pre": "yarn workspaces foreach --verbose --topological-dev --no-private version prerelease && yarn workspaces foreach --verbose --topological-dev --parallel --no-private npm publish --tolerate-republish",
    "g:build": "cd $INIT_CWD && (run g:build:types & run g:build:lib)",
    "g:build:types": "cd $INIT_CWD && tsc --build",
    "g:build:types:force": "cd $INIT_CWD && rm -rf ./dist/types && tsc --build",
    "g:build:lib": "cd $INIT_CWD && (run g:build:lib:esm & run g:build:lib:cjs)",
    "g:build:lib:esm": "cd $INIT_CWD && rm -rf ./dist/esm && esbuild ./src/**/*.ts --outdir=./dist/esm --format=esm --sourcemap",
    "g:build:lib:cjs": "cd $INIT_CWD && rm -rf ./dist/cjs && esbuild ./src/**/*.ts --outdir=./dist/cjs --format=cjs --sourcemap"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "esbuild": "^0.12.6",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.0.4",
    "ts-jest": "^27.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  },
  "resolutions": {
    "contentlayer": "workspace:*",
    "@contentlayer/*": "workspace:*",
    "contentlayer-stackbit-yaml-generator": "workspace:*",
    "next-contentlayer": "workspace:*",
    "rxjs": "^7.1.0",
    "next": "10.2.4-canary.7"
  }
}
