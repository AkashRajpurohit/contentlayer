{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["ES2020", "dom", "DOM.Iterable"],
    "module": "ES2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmit": true,
    "strict": true,
    "target": "ES2020",
    "rootDir": "./src"
  },
  "include": ["./src"]
}
