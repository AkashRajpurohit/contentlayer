{
  "name": "contentlayer",
  "version": "0.0.2-18",
  "bin": "./dist/cli/index.js",
  "exports": {
    "./source-local": {
      "import": "./dist/esm/source-local/index.js",
      "require": "./dist/cjs/source-local/index.js"
    },
    "./client": {
      "import": "./dist/esm/client/index.js",
      "require": "./dist/cjs/client/index.js"
    },
    "./react": {
      "import": "./dist/esm/react/index.js",
      "require": "./dist/cjs/react/index.js"
    },
    "./utils": {
      "import": "./dist/esm/utils/index.js",
      "require": "./dist/cjs/utils/index.js"
    },
    "./core": {
      "import": "./dist/esm/core/index.js",
      "require": "./dist/cjs/core/index.js"
    }
  },
  "_typesVersions": "Not needed anymore once this issue is closed https://github.com/microsoft/TypeScript/issues/33079",
  "typesVersions": {
    "*": {
      "source-local": [
        "./dist/esm/source-local"
      ],
      "client": [
        "./dist/esm/client"
      ],
      "react": [
        "./dist/esm/react"
      ],
      "utils": [
        "./dist/esm/utils"
      ],
      "core": [
        "./dist/esm/core"
      ]
    }
  },
  "scripts": {
    "prepack": "yarn build",
    "build": "yarn build:cli && yarn build:lib && echo Build complete",
    "build:cli": "rm -rf dist/cli && esbuild --bundle src/cli/index.ts --outfile=dist/cli/index.js --platform=node --target=node12 --sourcemap --external:esbuild && chmod +x ./dist/cli/index.js",
    "build:lib": "yarn build:lib:esm && yarn build:lib:cjs",
    "build:lib:cjs": "rm -rf ./dist/cjs ./dist/tsconfig.cjs.tsbuildinfo && tsc --build tsconfig.cjs.json",
    "build:lib:esm": "rm -rf ./dist/esm ./dist/tsconfig.tsbuildinfo && tsc --build tsconfig.json"
  },
  "dependencies": {
    "@contentlayer/cli": "workspace:*",
    "@contentlayer/client": "workspace:*",
    "@contentlayer/core": "workspace:*",
    "@contentlayer/react": "workspace:*",
    "@contentlayer/source-local": "workspace:*",
    "@contentlayer/utils": "workspace:*"
  },
  "devDependencies": {
    "esbuild": "^0.12.6",
    "typescript": "^4.2.4"
  }
}
