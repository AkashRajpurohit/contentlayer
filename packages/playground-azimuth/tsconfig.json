{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["next-env.d.ts", "./src", "./src/**/*.json", "./node_modules/@types", "./sourcebit"],
  "references": [{ "path": "../sourcebit/tsconfig.json" }],
  "exclude": ["node_modules"]
}
