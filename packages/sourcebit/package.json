{
  "name": "sourcebit",
  "bin": "./dist-cli/index.js",
  "exports": {
    "./source-local": {
      "import": "./dist-esm/source-local/index.js",
      "require": "./dist-cjs/source-local/index.js"
    },
    "./client": {
      "import": "./dist-esm/client/index.js",
      "require": "./dist-cjs/client/index.js"
    },
    "./core": {
      "import": "./dist-esm/core/index.js",
      "require": "./dist-cjs/core/index.js"
    }
  },
  "_typesVersions": "https://github.com/microsoft/TypeScript/issues/33079",
  "typesVersions": {
    "*": {
      "source-local": [
        "dist-esm/source-local"
      ],
      "client": [
        "dist-esm/client"
      ],
      "core": [
        "dist-esm/core"
      ]
    }
  },
  "scripts": {
    "build": "yarn build:cli && yarn build:lib",
    "build:cli": "rm -rf dist-cli && esbuild --bundle src/cli/index.ts --outfile=dist-cli/index.js --platform=node --sourcemap",
    "build:lib": "yarn build:lib:esm && yarn build:lib:cjs",
    "build:lib:cjs": "rm -rf dist-cjs tsconfig.cjs.tsbuildinfo && tsc --project tsconfig.cjs.json",
    "build:lib:esm": "rm -rf dist-esm tsconfig.esm.tsbuildinfo && tsc --project tsconfig.esm.json"
  },
  "dependencies": {
    "@sourcebit/cli": "workspace:*",
    "@sourcebit/client": "workspace:*",
    "@sourcebit/core": "workspace:*",
    "@sourcebit/source-local": "workspace:*"
  },
  "devDependencies": {
    "esbuild": "^0.9.2",
    "typescript": "^4.1.5"
  }
}
