    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@sanity/client": "^2.7.1",
    "@sanity/core": "^2.7.4",
    "@sanity/image-url": "^0.140.22",
    "@sanity/schema": "^2.7.4",
    "@sourcebit/core": "workspace:*",
    "rxjs": "^6.6.7"
  }
}
